<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PolicyActivity">

    <FrameLayout
        android:id="@+id/fl_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/a_policy_ll_fragment_change">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/a_policy_ll_fragment_change"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_large"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_small"
        android:gravity="bottom"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/a_policy_btn_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_micro4"
            android:layout_weight="1"
            android:padding="@dimen/padding_small2"
            android:text="@string/a_privacy_policy" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/a_policy_btn_about_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_micro4"
            android:layout_weight="1"
            android:padding="@dimen/padding_small2"
            android:text="@string/a_policy_about_app" />
    </LinearLayout>


</RelativeLayout>